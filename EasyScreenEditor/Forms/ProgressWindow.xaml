<Window x:Class="EasyScreenEditor.Forms.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyScreenEditor.Forms"
        mc:Ignorable="d"
        Title="Progress"  Height="60" Width="360">
    <Grid Margin="0,0,0,1">
        <ProgressBar x:Name="CommonProgressBar" HorizontalAlignment="Center" Height="20" Margin="0,0,0,0" VerticalAlignment="Center" Width="300" Background="#FF83B3B9" BorderBrush="#FF83B3B9" Foreground="#FF1D6771" Minimum="0" Maximum="100"/>
        <TextBox x:Name="ProgressIndicator" Text="0 %" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="20" RenderTransformOrigin="0.422,0.685" Padding="0,0,0,0" FontSize="10" UseLayoutRounding="False" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0,0,0,0" IsEnabled="False" Opacity="0.9" Background="Transparent" Foreground="White"/>
    </Grid>
</Window>
